<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    app:parallax_factor="1.9"
    tools:context=".SettingsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/crimsonHead"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/item_background"
            android:text="@string/crimson"
            android:textSize="10sp"
            android:textColor="#FFCCCCCC"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/crimsonHead"
            android:id="@+id/scrollView"
            xmlns:android="http://schemas.android.com/apk/res/android">

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <View
               android:layout_width="fill_parent"
               android:layout_height="50dp"
               android:id="@+id/seperator1"
               android:background="#FF333333"
               android:longClickable="true"
               android:layout_alignParentStart="true"/>
           <View
               android:layout_width="fill_parent"
               android:layout_height="46dp"
               android:background="#FF000000"
               android:id="@+id/seperator2"
               android:layout_margin="2dp"
               />

           <ImageButton
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:id="@+id/saveImageButton"
               android:src="@drawable/ic_checkbox_marked_outline_grey600_48dp"
               android:scaleType="fitXY"
               android:layout_marginTop="2dp"
               android:layout_marginStart="30dp"
               android:onClick="save"/>

           <ImageButton
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:id="@+id/resetImageButton"
               android:src="@drawable/ic_close_box_outline_grey600_48dp"
               android:scaleType="fitXY"
               android:layout_marginTop="2dp"
               android:layout_centerHorizontal="true"
               android:onClick="reset"/>

           <ImageButton
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:id="@+id/qrcodeImageButton"
              android:src="@drawable/ic_qrcode_grey600_48dp"
              android:scaleType="fitXY"
              android:layout_alignParentEnd="true"
              android:layout_marginTop="2dp"
              android:layout_marginRight="30dp"/>






           <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="Core ID"
                android:id="@+id/edit_core_id"
                android:layout_below="@id/seperator1"
                android:layout_marginTop="20dp"/>


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="AccessToken"
                android:id="@+id/edit_access_token"
                android:inputType="textPassword"
                android:cursorVisible="false"
                android:layout_below="@+id/edit_core_id"/>


           <ImageButton
               android:layout_width="50dp"
               android:layout_height="45dp"
               android:id="@+id/accesstokenImageButton"
               android:src="@drawable/selector"
               android:scaleType="fitXY"
               android:layout_marginEnd="10dp"
               android:layout_alignParentEnd="true"
               android:layout_alignBottom="@+id/edit_access_token"
               android:backgroundTint="@android:color/transparent"/>


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="ControlPIN"
                android:id="@+id/edit_ctrl_pin"
                android:layout_below="@+id/edit_access_token">
            </EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="Function name"
                android:id="@+id/edit_ctrl_value"
                android:layout_below="@+id/edit_ctrl_pin">
            </EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="Camera URL"
                android:id="@+id/edit_cam_url"
                android:layout_below="@+id/edit_ctrl_value">
             </EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="Camera Auth User"
                android:id="@+id/edit_cam_user"
                android:layout_below="@+id/edit_cam_url">
            </EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:hint="Camera Auth Password"
                android:id="@+id/edit_cam_pass"
                android:cursorVisible="false"
                android:inputType="textPassword"
                android:layout_below="@+id/edit_cam_user" />


           <ImageButton
               android:layout_width="50dp"
               android:layout_height="45dp"
               android:id="@+id/campassImageButton"
               android:src="@drawable/ic_visibility_grey600_48dp"
               android:scaleType="fitXY"
               android:layout_marginEnd="10dp"
               android:layout_alignParentEnd="true"
               android:layout_alignBottom="@+id/edit_cam_pass"
               android:clickable="false"
               android:backgroundTint="@android:color/transparent"/>



       </RelativeLayout>
    </ScrollView>
    </RelativeLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>