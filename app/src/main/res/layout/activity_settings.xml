<?xml version="1.0" encoding="utf-8"?>

<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    app:parallax_factor="1.9"
    app:inner_parallax_factor="1.9"
    app:alpha_factor="1.9"
    tools:context=".SettingsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        // Toolbar + Head
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainlayout">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#FF660000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headcontainer"
            android:paddingTop="?attr/actionBarSize">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#FF333333"
                android:elevation="1dp" />

            <TextView
                android:id="@+id/crimsonHead"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:background="@drawable/item_background"
                android:text="@string/crimson"
                android:elevation="1dp" />

            <!-- Extended Toolbar-->
            <include
                layout="@layout/settings_action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/action_bar_layout"
                android:layout_below="@id/crimsonHead" />

        </RelativeLayout>
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainlayout"
            android:id="@+id/cardlayout">


        <!-- CrimsonCore Card-->
        <android.support.v7.widget.CardView
            android:id="@+id/coreCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF232323"
            card_view:cardCornerRadius="2dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainlayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonCore"
                    android:id="@+id/headlineCrimsonCore"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Core ID"
                    android:id="@+id/edit_core_id"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@id/headlineCrimsonCore"/>


                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Core AccessToken"
                    android:id="@+id/edit_access_token"
                    android:inputType="textPassword"
                    android:layout_below="@+id/edit_core_id"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true" />


                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/accesstokenImageButton"
                    android:src="@drawable/selector"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/edit_access_token"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Control Pin Card-->
        <android.support.v7.widget.CardView
            android:id="@+id/controlPinCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/coreCard"
            card_view:cardBackgroundColor="#FF333333"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonCore Control Pin"
                    android:id="@+id/headlineCrimsonControlPin"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Core Control Pin"
                    android:id="@+id/edit_ctrl_pin"
                    android:layout_below="@id/headlineCrimsonControlPin"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Control Function Card-->
        <android.support.v7.widget.CardView
            android:id="@+id/controlFunctionCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/controlPinCard"
            card_view:cardBackgroundColor="#FF333333"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonCore Function"
                    android:id="@+id/headlineCrimsonFunction"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Core Function Name"
                    android:id="@+id/edit_ctrl_value"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@+id/headlineCrimsonFunction"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Cam Card-->
        <android.support.v7.widget.CardView
            android:id="@+id/camCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/controlFunctionCard"
            card_view:cardBackgroundColor="#FF333333"
            card_view:cardCornerRadius="2dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonCam"
                    android:id="@+id/headlineCrimsonCam"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Camera URL"
                    android:id="@+id/edit_cam_url"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@id/headlineCrimsonCam"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Camera Auth User"
                    android:id="@+id/edit_cam_user"
                    android:layout_below="@+id/edit_cam_url"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Camera Auth Password"
                    android:id="@+id/edit_cam_pass"
                    android:inputType="textPassword"
                    android:layout_below="@+id/edit_cam_user"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true" />


                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/campassImageButton"
                    android:src="@drawable/selector"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/edit_cam_pass"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="2dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- MySQL Web-Service -->
        <android.support.v7.widget.CardView
            android:id="@+id/tempCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF333333"
            card_view:cardCornerRadius="2dp"
            android:layout_below="@id/camCard">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonHome MySQL WebService"
                    android:id="@+id/headlineCrimsonHomeMySQL"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Temperature WebService URL"
                    android:id="@+id/edit_temp_service"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@id/headlineCrimsonHomeMySQL"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- CrimsonHome WebSocket -->
        <android.support.v7.widget.CardView
            android:id="@+id/crimsonHomeWebSocket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF333333"
            card_view:cardCornerRadius="2dp"
            android:layout_below="@id/tempCard">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CrimsonHome WebSocket"
                    android:id="@+id/headlineCrimsonHomeWebSocket"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:elegantTextHeight="true"
                    android:height="30dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffadadad" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="WebSocket URL"
                    android:id="@+id/edit_websocket_url"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@id/headlineCrimsonHomeWebSocket"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="WebSocket Port"
                    android:id="@+id/edit_websocket_port"
                    android:textColor="@android:color/primary_text_dark"
                    android:textColorHint="#ff960018"
                    android:elegantTextHeight="true"
                    android:layout_below="@id/edit_websocket_url"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>