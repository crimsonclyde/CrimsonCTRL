<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    app:parallax_factor="1.9"
    app:inner_parallax_factor="1.9"
    app:alpha_factor="1.9"
    tools:context=".MainActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/maincontainer">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#FF660000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/progressBar"
            android:layout_below="@id/toolbar"
            android:paddingBottom="7dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:elevation="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headcontainer"
            android:paddingTop="?attr/actionBarSize">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="#FF333333"
                        android:elevation="1dp" />

                    <TextView
                        android:id="@+id/crimsonHead"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/item_background"
                        android:text="@string/crimson"
                        android:elevation="1dp" />



        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/srollcontainer"
        android:paddingTop="10dp"
        android:layout_below="@id/headcontainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardcontainer">

            <!-- Temperature Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/tempCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textTemperature"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="° Celsius"
                        android:id="@+id/tempTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- StoneCircle Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/stonecircleCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/tempCard"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/scButtonSelector"
                        android:elevation="10dp"
                        android:background="@android:color/transparent"/>

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textStoneCircle"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="StoneCircle"
                        android:id="@+id/stonecircleTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- Photo resistor Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/photoCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/stonecircleCard"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textResistance"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Ω - Resistance"
                        android:id="@+id/photoTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- CrimsonHome State Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/crimsonHomeStateCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/photoCard"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textCrimsonHomeState"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="CrimsonHome"
                        android:id="@+id/crimsonHomeTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- CrimsonHome Apache Service Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/crimsonHomeApacheCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/crimsonHomeStateCard"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textCrimsonHomeApache"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Apache Service"
                        android:id="@+id/crimsonHomeApacheTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- CrimsonHome Uptime Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/crimsonHomeUptimeCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/crimsonHomeApacheCard"
                card_view:cardBackgroundColor="#FF232323"
                card_view:cardCornerRadius="8dp" >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_out"/>

                    <View android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:elevation="10dp"
                        android:background="@drawable/circle_in"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:text="---"
                        android:id="@+id/textCrimsonHomeUptime"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/secondary_text_dark"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Uptime"
                        android:id="@+id/crimsonHomeUptimeTextView"
                        android:elevation="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_centerVertical="true"
                        android:textSize="30sp"
                        android:textColor="@android:color/tertiary_text_light"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>
    </RelativeLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>

