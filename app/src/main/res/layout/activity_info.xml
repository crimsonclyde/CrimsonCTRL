<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="#FF000000"
                                                     app:parallax_factor="1.9"
                                                     tools:context=".InfoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/crimsonHead"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/item_background"
            android:text="@string/crimson"
            android:textSize="10sp"
            android:textColor="#FFCCCCCC"
            android:textStyle="bold" />



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#FFE6E6E6"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/authorCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" >



                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/authorImageView"
                        android:src="@drawable/ic_account_box_black_48dp"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorTextView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="CrimsonClyde"
                        android:textSize="20sp"
                        android:layout_toEndOf="@id/authorImageView"
                        android:textColor="@color/secondary_text_default_material_light"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/emailImageView"
                        android:src="@drawable/ic_email_black_48dp"
                        android:layout_below="@+id/authorImageView"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailTextView"
                        android:autoLink="email"
                        android:text="clyde@darkpack.net"
                        android:textSize="20sp"
                        android:layout_alignTop="@+id/emailImageView"
                        android:layout_toEndOf="@+id/emailImageView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="secondary_text_default_material_light" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/homeImageView"
                        android:src="@drawable/ic_home_black_48dp"
                        android:layout_below="@+id/emailImageView"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/homeTextView"
                        android:autoLink="web"
                        android:text="http://clyde.darkpack.net"
                        android:textSize="20sp"
                        android:layout_alignTop="@+id/homeImageView"
                        android:layout_toEndOf="@+id/homeImageView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColorHint="@color/secondary_text_default_material_light" />

                    </RelativeLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#FFE6E6E6"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/thankyouCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/thankyouTextView"
                        android:text="@string/thankyou_text"
                        android:autoLink="all"
                        android:layout_below="@+id/authorCard"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:singleLine="false" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#FFE6E6E6"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/copyrightCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/copyrightTextView"
                        android:autoLink="all"
                        android:text="@string/copyright"
                        android:layout_below="@+id/copyrightCard"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/secondary_text_default_material_light" />

                </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>