<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    app:parallax_factor="1.9"
    app:inner_parallax_factor="2.7"
    app:alpha_factor="1.9"
    app:parallax_views_num="3"
    tools:context=".InfoActivity" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

       <TextView
            android:id="@+id/crimsonHead"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/item_background"
            android:text="@string/crimson"
            android:textSize="10sp"
            android:textColor="#FFCCCCCC"
            android:textStyle="bold" />



        <!-- Author Card -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/authorCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF232323"
            card_view:cardCornerRadius="2dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/authorImageView"
                        android:src="@drawable/accountboxoutline" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorTextView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="CrimsonClyde"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/authorImageView"
                        android:textColor="#FFCC2323"
                        tools:ignore="HardcodedText"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/emailImageView"
                        android:src="@drawable/email"
                        android:layout_below="@+id/authorImageView" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailTextView"
                        android:autoLink="email"
                        android:text="clyde@darkpack.net"
                        android:textSize="16sp"
                        android:layout_alignTop="@+id/emailImageView"
                        android:layout_toEndOf="@+id/emailImageView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColorLink="#FFCC2323"
                        android:textColor="@android:color/secondary_text_dark"
                        tools:ignore="HardcodedString"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/homeImageView"
                        android:src="@drawable/home"
                        android:layout_below="@+id/emailImageView"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/homeTextView"
                        android:autoLink="web"
                        android:text="http://clyde.darkpack.net"
                        android:textSize="16sp"
                        android:layout_alignTop="@+id/homeImageView"
                        android:layout_toEndOf="@+id/homeImageView"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textColorLink="#FFCC2323"
                        android:textColor="@android:color/secondary_text_dark"
                        tools:ignore="HardcodedString" />

                    </RelativeLayout>

            </android.support.v7.widget.CardView>


        <!-- Thankyou Card -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/thankYouCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/authorCard"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF232323"
            card_view:cardCornerRadius="2dp">



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/thankYouTextView"
                        android:text="@string/thankyou_text"
                        android:layout_marginTop="10dp"
                        android:textColorLink="#FFCC2323"
                        android:textColor="@android:color/secondary_text_dark"/>



        </android.support.v7.widget.CardView>



        <!-- Copyright Card -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/copyrightCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thankYouCard"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            card_view:cardBackgroundColor="#FF232323"
            card_view:cardCornerRadius="2dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/copyrightTextView"
                        android:autoLink="all"
                        android:text="@string/copyright"
                        android:layout_marginTop="10dp"
                        android:textColorLink="#FFCC2323"
                        android:textColor="@android:color/secondary_text_dark" />

        </android.support.v7.widget.CardView>



    </LinearLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>